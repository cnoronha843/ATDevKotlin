<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesExercicios"
    android:background="@color/black_80">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/capa"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@color/black"
        app:layout_constraintTop_toBottomOf="@id/toolbar_detalhes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/play_video"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_play"
        app:layout_constraintStart_toStartOf="@id/capa"
        app:layout_constraintEnd_toEndOf="@id/capa"
        app:layout_constraintTop_toTopOf="@id/capa"
        app:layout_constraintBottom_toBottomOf="@id/capa"
        />
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercicio"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/capa"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descrição do exercicio"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txt_mais_exercicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais Exercicios"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/descricao"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_outros_exercicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_mais_exercicios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
         />


</androidx.constraintlayout.widget.ConstraintLayout>